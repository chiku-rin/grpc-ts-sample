{
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "files.eol": "\n",
  "files.encoding": "utf8",
  "debug.node.autoAttach": "off",
  // -- lint --
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.formatOnSave": true,
  "editor.rulers": [
    100
  ],
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "prettier.disableLanguages": [
    "javascript",
    "typescript"
  ],
  "typescript.tsdk": "node_modules/typescript/lib"
}